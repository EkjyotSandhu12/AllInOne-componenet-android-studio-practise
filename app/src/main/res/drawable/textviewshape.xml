<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue square.-->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape>
            <solid android:color="@color/teal_200" />
            <stroke android:color="@color/black"
                android:width="5dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>